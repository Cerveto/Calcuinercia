<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calcu1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.eet.pma.calcuinercias.Calcu1Activity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:alignmentMode="alignMargins"
        android:layout_centerInParent="true">

        <ImageButton
            android:text="Button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/btn_cil"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            app2:srcCompat="@mipmap/cilinder"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="#00000000" />

        <ImageButton
            android:text="Button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/btn_cil_buit"
            app2:srcCompat="@mipmap/cil_buit"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="#00000000" />

        <ImageButton
            android:text="Button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/btn_con"
            android:layout_marginBottom="25dp"
            app2:srcCompat="@mipmap/cono"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="#00000000"
            />

        <ImageButton
            android:text="Button"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app2:srcCompat="@mipmap/bola"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="#00000000"
            android:id="@+id/btn_esfera" />

        <ImageButton
            android:text="Button"
            android:id="@+id/btn_basic"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app2:srcCompat="@mipmap/basic"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="#00000000"

            />

        <ImageButton
            android:text="Button"
            android:id="@+id/btn_cub"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app2:srcCompat="@mipmap/cub"
            android:scaleType="fitCenter"
            android:padding="0dp"
            android:background="#00000000"
            />
    </GridLayout>

</RelativeLayout>
